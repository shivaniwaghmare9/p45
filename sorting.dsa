#include<iostream>
using namespace std;
class top{
    int c=0;
    bool f=true;
    
    public:void insertsort(int arr[],int s){
        for(int i=1; i<s; i++){
             c++;
             int j=i;
    while (j>0 && arr[j]<arr[j-1]){
                    int tmp;
                   tmp= arr[j-1];
                   arr[j-1]=arr[j];
                   arr[j]=tmp;
                   j--;
                }
            }
           
        cout<<"\ncounter hit="<<c;
    }
};
int main(){
    top p;
    int a[]={5,4,3,2,1};
    int s=sizeof(a)/sizeof(a[0]);
    for(int i=1; i<s; i++){
        cout<<a[i]<<"\t";
    }
    p.insertsort(a,s);                        //output=  5	4	2	1	3	
                                              //counter hit=4               
     cout<<"\nafter applying\n";              // after applying 
    for(int i=1; i<s; i++){                   //1 2 3 4 5
        cout<<a[i]<<"\t";
    }
    
    
}

